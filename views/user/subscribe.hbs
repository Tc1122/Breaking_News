<section style="margin-top: 165px; width: 100%; height:1000px;z-index: 0;position: relative;float: left;">
    <div class="subscribe-parent">
       <form class="subscribe-form" action="/signup" method="post" enctype="multipart/form-data" name="ops">
  <div class="form-group">
       <label for="exampleInputEmail1">Name</label>
    <input name="name" type="text" class="form-control" id="exampleTextInput1" aria-describedby="emailHelp" placeholder="Enter name">
    </div>
     <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
  </div>
  <div class="form-group">
    <a href="/login">Already have an account?</a>
  </div>
  <button type="submit" class="btn btn-primary">Signup</button>
</form>
    </div>
</section>